---
interface Props {
  title: string
  customClass?: string,
  id?: string
}
const { title, customClass, id } = Astro.props
---

<h3
  id={id}
  class={'bg-gradient-to-r dark:bg-gradient-to-b from-gray-950 to-gray-500 dark:from-gray-500 dark:to-white  font-bold bg-clip-text text-[32px] text-transparent text-center text-pretty w-full flex gap-3 justify-center items-center ' +
    customClass}
>
  {title}
</h3>
