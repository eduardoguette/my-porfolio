---
export interface Props {
	title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<!-- Favicon -->
		<link rel="icon" href="./image.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap"
			rel="stylesheet"
		/>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1" />
    <link rel="shortcut icon" href="./image.svg" type="image/x-icon" />
    <link rel="icon" href="./image.svg" type="image/x-icon" />
    <link rel="canonical" href="https://eduardoguette.vercel.app/" />
    <meta name="description" content="Eduardo Guette portfolio, a software developer from Venezuela" />
    <meta name="robots" content="index,follow" />
    <meta property="og:title" content="Eduardo Guette" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="https://eduardoguette.vercel.app/" />
    <meta property="og:description" content="Eduardo Guette portfolio, a software developer from Venezuela" />
    <meta property="og:image:width" content="770" />
    <meta property="og:image:width" content="420" />
    <meta property="og:image" content="https://eduardoguette.vercel.app/image.svg" />
    <meta name="twitter:card" content="summary" />
    <meta name="description" content="Eduardo Guette portfolio, a software developer from Venezuela" />

		<title>{title}</title>
	</head>
	<body class="xl:max-w-[65vw] mx-auto p-4 xl:p-0 scroll-smooth md:mb-0">
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			#2b3d4f 30%,
			#3398db 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #f6f6f6;
		scroll-behavior: smooth;
		scroll-padding-top: 1rem;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
			DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
	}

	.card-experience {
		grid-template-areas:
			'companyName date'
			'position position'
			'responsabilities responsabilities';
	}
</style>
