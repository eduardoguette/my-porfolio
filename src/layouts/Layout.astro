---
export interface Props {
	title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<!-- Favicon -->
		<link rel="icon" href="/image.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap"
			rel="stylesheet"
		/>
		<!--  Meta image -->
		<meta property="og:image" content="/image.svg" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:image:alt" content="Portfolio Eduardo Guette" />
		<meta property="og:image:type" content="image/svg+xml" />
		<meta property="og:image:secure_url" content="/image.svg" />
		<meta property="og:image:alt" content="Portfolio Eduardo Guette" />
		<meta property="og:image:type" content="image/svg+xml" />
		<meta property="og:image:secure_url" content="/image.svg" />
		<meta property="og:image:alt" content="Portfolio Eduardo Guette" />
		<meta property="og:image:type" content="image/svg+xml" />
		<meta property="og:image:secure_url" content="/image.svg" />
		<!-- meta description -->
		<meta property="og:description" content="Portfolio Eduardo Guette.  I am Software Engineer with 4 years of experience in the industry." />

		<title>{title}</title>
	</head>
	<body class="max-w-[80ch] mx-auto p-4 sm:p-0 scroll-smooth md:mb-0">
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			#2b3d4f 30%,
			#3398db 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #f6f6f6;  
		scroll-behavior: smooth;
		scroll-padding-top: 1rem; 
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
		DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
	}
	 
	.card-experience {
		grid-template-areas:
			'companyName date'
			'position position'
			'responsabilities responsabilities';
	}
</style>
