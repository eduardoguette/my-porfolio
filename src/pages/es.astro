---
import { ViewTransitions } from 'astro:transitions'

import data from '../../public/data.json'
import economistaLogo from '../assets/eleconomista-logo.svg'
import psLabLogo from '../assets/pslab-logo.svg'
import smartclipLogo from '../assets/smartclip-logo.svg'
import Experience from '../components/Experience.jsx'
import Header from '../components/Header'
import Hero from '../components/Hero.astro'
import Projects from '../components/Projects.jsx'
import SocialNav from '../components/SocialNav.jsx'
import Layout from '../layouts/Layout.astro'
---

<ViewTransitions />
<Layout
  title="Eduardo Guette - Desarrollador web - Portafolio"
  description="Web developer with 5+ years of experience. Specialist in unique and innovative digital products. Creativity, detail and teamwork to exceed expectations."
  lang="es"
  canonical="https://eduardoguette.com/es"
>
  <Header />
  <main class="pb-10 relative z-10 mx-auto p-4 lg:w-[80ch]">
    <article class="mb-40" id="about">
      <header class="mb-4 flex justify-center items-center flex-col">
        <Hero />
        <h1 class="text-4xl font-semibold text-balance mt-3">
          {data.es.hero.title}
        </h1>
        <p
          class="mt-3 text-xl text-center text-blue-200 text-pretty"
          set:html={data.es.hero.subtitle}
        />
      </header>

      <footer class="mt-8">
        <SocialNav />
      </footer>
    </article>
    <Projects client:idle projects={data.es.projects} name="Proyectos" />
    <article class="my-32  hidden">
      <p class="mb-4">Algunas de las empresas a las que agregu√© valor:</p>
      <div
        class="flex gap-10 items-center justify-center w-8/12 mx-auto my-10 flex-wrap md:flex-nowrap"
      >
        <img
          src={smartclipLogo.src}
          loading="lazy"
          alt="Logo Smartclip"
          width="192"
          height="46.83"
          class="w-48 filter invert"
          loading="lazy"
        />
        <img
          src={economistaLogo.src}
          loading="lazy"
          alt="logo elEconomista"
          width="192"
          height="41.59"
          class="w-48 filter invert"
        />
        <img
          src={psLabLogo.src}
          alt="Logo PsLab"
          height="49.27"
          width="80px"
          class="w-20 filter invert"
        />
      </div>
    </article>
    <Experience
      client:idle
      experience={data.es.experience}
      name="Experiencia"
    />
  </main>
  <footer class="mt-20  text-sm lg:w-[1200px] px-4 py-8 mx-auto ">
    <p class="text-right text-blue-200">Eduardo Guette</p>
  </footer>
</Layout>
