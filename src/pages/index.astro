---
import { ViewTransitions } from 'astro:transitions'
import data from '../../public/data.json'
import economistaLogo from '../assets/eleconomista-logo.svg'
import psLabLogo from '../assets/pslab-logo.svg'
import smartclipLogo from '../assets/smartclip-logo.svg'
import Experience from '../components/Experience.jsx'
import Header from '../components/Header.jsx'
import Hero from '../components/Hero.astro'
import Projects from '../components/Projects.jsx'
import SocialNav from '../components/SocialNav.jsx'
import Layout from '../layouts/Layout.astro'
 
---

<ViewTransitions />
<Layout
  title="Eduardo Guette"
  description="Drive your success with impactful technological solutions! I'm a passionate professional in software development and front-end design, focused on the perfect balance between technical efficiency and user experience. Let's create cutting-edge solutions that drive performance and deliver real value. Connect with me to take your ideas to the next level."
  lang="en"
  canonical="https://eduardoguette.com/"
>
  <Header />
  <main class="relative z-10 mx-auto p-4 lg:w-[90ch]">
    <article class="mb-20 md:mb-40" id="about">
      <header class="mb-4 flex justify-center items-center flex-col">
        <Hero />
        <h1 class="text-3xl md:text-4xl font-semibold text-balance mt-3">
          {data.en.hero.title}
        </h1>
        <h2
          class="mt-3 text-xl md:text-2xl text-center text-blue-200 text-pretty"
          set:html={data.en.hero.subtitle}
        />
      </header>

      <footer class="mt-8">
        <SocialNav />
      </footer>
    </article>
    <article class="my-10 md:my-32">
      <h2 class="mb-4 text-2xl font-medium">I have collaborated with:</h2>

      <div
        class="flex gap-10 items-center justify-center w-8/12 mx-auto my-10 flex-wrap md:flex-nowrap"
      >
        <img
          src={smartclipLogo.src}
          loading="lazy"
          alt="Logo Smartclip"
          width="192"
          height="46.83"
          class="w-48 filter invert h-[46.83px]"
          loading="lazy"
        />
        <img
          src={economistaLogo.src}
          loading="lazy"
          alt="logo elEconomista"
          width="192"
          height="41.59"
          class="w-48 filter invert h-[41.59px]"
        />
        <img
          src={psLabLogo.src}
          alt="Logo PsLab"
          height="49.27"
          width="80px"
          class="w-20 filter invert h-[49.27px]"
        />
      </div>
    </article>
    <Projects client:idle projects={data.en.projects} name="Projects" />

    <Experience client:idle experience={data.en.experience} name="Experience" />
  </main>
  <footer class="mt-20 text-sm lg:w-[1000px] px-4 py-8 mx-auto justify-between flex">
    <p class="text-right text-yellow-200">Eduardo Guette</p>
    <nav>
      <ul class="flex items-center gap-4">
        <li>
          <a href="#projects" class="hover:text-blue-200"> Projects</a>
        </li>
        <li>
          <a href="#experience" class="hover:text-blue-200"> Experience</a>
        </li>
      </ul>
    </nav>
  </footer>
</Layout>
