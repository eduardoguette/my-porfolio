---
import { ViewTransitions } from 'astro:transitions'
import data from '../../public/data.json'
import economistaLogo from '../assets/eleconomista-logo.svg'
import psLabLogo from '../assets/pslab-logo.svg'
import smartclipLogo from '../assets/smartclip-logo.svg'
import Box from '../components/Box.tsx'
import Experience from '../components/Experience.astro'
import Header from '../components/Header.astro'
import Hero from '../components/Hero.astro'
import Map from '../components/Map.astro'
import NavMenu from '../components/NavMenu.astro'
import Projects from '../components/Projects.astro'
import SocialNav from '../components/SocialNav'
import TitleSection from '../components/TitleSection.astro'
import Layout from '../layouts/Layout.astro'
---

<ViewTransitions />
<Layout
  title="Eduardo Guette - Web Developer - Portfolio"
  description="Web developer with 5+ years of experience. Specialist in unique and innovative digital products. Creativity, detail and teamwork to exceed expectations."
  lang="en"
  canonical="https://eduardoguette.com/"
>
  <Header />
  <main class="relative z-10 mx-auto p-4 mt-12">
    <article class="mb-8 lg:w-[1035px] mx-auto" id="about">
      <header
        id="aboutme"
        class="relative md:grid-cols-[315px,1fr] grid bento gap-8 w-full overflow-hidden"
      >
        <Box client:idle>
          <Hero />
          <h1
            class="z-20 relative text-3xl md:-left-0 mt-6 font-medium"
            set:html={data.en.hero.title}
          />
          <p class="text-gray-300 mt-1">
            {data.en.hero.born}
          </p>
          <p class="text-gray-300 mt-1">
            {data.en.hero.work}
          </p>
        </Box>
        <div class="flex flex-col h-full gap-6">
          <Box client:idle title="About me">
            <h2 class="text-md" set:html={data.en.hero.subtitle} />
          </Box>
          <div class="grid md:grid-cols-[1fr,162px] gap-6">
            <Box client:idle title="Contact me">
              <SocialNav />
            </Box>
            <Box
              customClass=" m-0 overflow-hidden w-max  px-1 py-1"
              client:idle
            >
              <Map />
            </Box>
          </div>
        </div>
      </header>
    </article>
    <div class="lg:w-[1035px] mx-auto flex flex-col">
      <TitleSection title="I have collaborated with" customClass="my-10" />

      <Box client:idle>
        <div class="absolute top-0 flex w-full justify-center">
          <div
            class="left-0 h-[1px] animate-border-width rounded-full bg-gradient-to-r from-[rgba(17,17,17,0)] via-white to-[rgba(17,17,17,0)] transition-all duration-1000"
          >
          </div>
        </div>
        <article
          class="flex gap-10 items-center justify-center w-8/12 mx-auto my-10 flex-wrap md:flex-nowrap"
        >
          <img
            src={smartclipLogo.src}
            loading="lazy"
            alt="Logo Smartclip"
            width="192"
            height="46.83"
            class="w-48 filter invert h-[46.83px]"
            loading="lazy"
          />
          <img
            src={economistaLogo.src}
            loading="lazy"
            alt="logo elEconomista"
            width="192"
            height="41.59"
            class="w-48 filter invert h-[41.59px]"
          />
          <img
            src={psLabLogo.src}
            alt="Logo PsLab"
            height="49.27"
            width="80px"
            class="w-20 filter invert h-[49.27px]"
          />
        </article>
      </Box>

      <TitleSection id="projects" title="Projects" customClass="mt-10" />
      <Projects projects={data.en.projects} name="Projects" />

      <Experience 
        experience={data.en.experience}
        name="Experience"
      />
    </div>
  </main>
  <footer
    class="mt-20 px-4 md:px-0 text-sm md:w-[1035px] py-8 mx-auto justify-between flex"
  >
    <p class="text-neutral-600">Eduardo Guette</p>
    <NavMenu />
  </footer>
</Layout>
